<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FootballMatches" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.FootballMatches" parent="Base.Theme.FootballMatches" />
    <style name="matchLargeTextViews">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="matchSmallTextViews">
        <item name="android:textColor">#929292</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>

    </style>
    <style name="matchHeaderLargeTextViews">
        <item name="android:textColor">@color/dark_gray_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    ///
    <style name="secondaryLinearlayouts">
        <item name="android:layout_marginBottom">@dimen/margin16</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/margin32</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">2</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="startSecondaryLinearlayouts">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textSize18</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:layout_weight">0.5</item>
    </style>
    <style name="centerSecondaryLinearlayouts">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textSize16</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="endSecondaryLinearlayouts">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textSize18</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:layout_weight">0.5</item>
    </style>
    <style name="dialogText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textSize18</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>

</resources>